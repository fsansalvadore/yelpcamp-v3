<!DOCTYPE html>
<html lang="it">
<head>
    <title>YelCamp v3_def</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>
<body>
<nav class="navbar navbar-default bg-light">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">YelpCamp</a>
        </div>
        <div class="navbar-nav">
            <ul class="navbar-nav navbar-right">
                <% if(!currentUser){ %>
                    <li class="nav-item"><a class="nav-item nav-link" href="/login">Login</a></li>
                    <li class="nav-item"><a class="nav-item nav-link" href="/register">Register</a></li>
                <% } else { %>
                    <li class="nav-item">Hi, <strong><a class="nav-item nav-link" style="margin: 0;" href="#"><%= currentUser.username %></a></strong></li>
                    <li class="nav-item"><a class="nav-item nav-link" href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
<% if(error && error.length>0){ %>
<div class="alert alert-danger" role="alert"> <%= error %></div>
<% } %>
<% if(success && success.length>0){ %>
<div class="alert alert-success" role="alert"> <%= success %></div>
<% } %>