<% include ../partials/header.ejs %>
<div class="container">
    <div class="form-box">
        <h2>Edit <%= camp.name %></h2>
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="campsiteName">Campsite name</label>
                <input class="form-control" type="text" id="campsiteName" name="camp[name]" value="<%= camp.name %>">
            </div>
            <div class="form-group">
                <label for="campsiteImg">Image</label>
                <input class="form-control" type="text" id="campsiteImg" name="camp[img]" value="<%= camp.img %>">
            </div>
            <div class="form-group">
                <label for="campsiteInfo">Description</label>
                <textarea rows="4" class="form-control" type="text" id="campsiteInfo" name="camp[info]" placeholder="Description of campsite"><%= camp.info %></textarea>
            </div>
            <button type="submit" class="form-control btn btn-success">Sumbit</button>
        </form>
    </div>
</div>

<% include ../partials/footer.ejs %>