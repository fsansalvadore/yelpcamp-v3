<% include ../partials/header.ejs %>
<div class="container">
    <div class="form-box">
        <h2>Create a new camp!</h2>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="campsiteName">Campsite name</label>
                <input class="form-control" type="text" id="campsiteName" name="name" placeholder="Campsite name">
            </div>
            <div class="form-group">
                <label for="campsiteImg">Image</label>
                <input class="form-control" type="text" id="campsiteImg" name="img" placeholder="Paste img url">
            </div>
            <div class="form-group">
                <label for="campsiteInfo">Description</label>
                <textarea rows="4" class="form-control" type="text" id="campsiteInfo" name="info" placeholder="Description of campsite"></textarea>
            </div>
            <button type="submit" class="form-control btn btn-success">Sumbit</button>
        </form>
    </div>
</div>

<% include ../partials/footer.ejs %>